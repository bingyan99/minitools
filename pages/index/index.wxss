scroll-view {
  height: 100%;
  background: #f5f5f5;
}
.nav {
  position: fixed;
  top: 0;
  width: 100%;
  height: 44px;
  background-color: #3c43ba;
  padding-top: env(safe-area-inset-top);
  z-index: 1;
}
.nav .title {
  color: white;
  text-align: center;
  font-weight: 500;
  font-size: 17px;
}
.nav .title.ipad {
  font-weight: 600;
  font-size: 22rpx;
}

.user {
  padding-top: 44px;
}
.user_wrapper {
  background: linear-gradient(to bottom, #4f55c0, #8a8ed5);
  color: #fff;
  margin-top: -50px;
}

.user_container {
  padding: 20px 15px;
  position: relative;
}
.user_avatar {
  width: 50px;
  height: 50px;
  background: #cccccc;
  display: inline-block;
  vertical-align: middle;
  border-radius: 50%;
  overflow: hidden;
  left: 15px;
  transform-origin: left 100%;
  will-change: transform;
  z-index: 2;
  position: -webkit-sticky;
  position: sticky;
  transform: translateY(8px);
}
.user_name {
  margin-left: 60px;
  font-size: 16px;
  position: relative;
  top: 4px;
}


.cell-list {
  height: 1000px;
}

.cell {
  height: 50px;
  line-height: 50px;
  background: #fff;
  margin-top: 10px;
  padding: 0 15px;
}